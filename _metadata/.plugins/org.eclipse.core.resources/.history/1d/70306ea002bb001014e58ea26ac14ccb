package com.maheswara.employeeRegistrationForm.Controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.security.authentication.*;
import org.springframework.security.core.Authentication;
import org.springframework.web.bind.annotation.*;

import com.maheswara.employeeRegistrationForm.Model.User;
import com.maheswara.employeeRegistrationForm.Service.UserService;

@RestController
@RequestMapping("/auth")
@CrossOrigin(origins = "http://localhost:5173")
public class AuthController {

    @Autowired
    private UserService userService;

    @Autowired
    private AuthenticationManager authenticationManager;

    // ‚úÖ SIGN UP
    @PostMapping("/register")
    public ResponseEntity<?> register(@RequestBody User user) {
        try {
            if (userService.findByUsername(user.getUsername()).isPresent()) {
                return ResponseEntity.badRequest().body("‚ùå Username already exists");
            }

            User newUser = userService.register(user);
            return ResponseEntity.ok("‚úÖ User registered successfully: " + newUser.getUsername());

        } catch (Exception e) {
            e.printStackTrace(); // üëà this prints exact reason
            return ResponseEntity.internalServerError()
                    .body(" Registration failed: " + e.getMessage());
        }

    }

    // ‚úÖ LOGIN
    @PostMapping("/login")
    public ResponseEntity<?> login(@RequestBody User loginRequest) {
        String username = loginRequest.getUsername();
        try {
            Authentication authentication = authenticationManager.authenticate(
                    new UsernamePasswordAuthenticationToken(
                            username,
                            loginRequest.getPassword()
                    )
            );

            // Login success ‚Äî reset failed attempts and update login time
            userService.resetFailedAttempts(username);
            return ResponseEntity.ok("‚úÖ Login successful for user: " + authentication.getName());

        } catch (LockedException e) {
            return ResponseEntity.status(403).body("üö´ Account locked due to 3 failed login attempts.");
        } catch (BadCredentialsException e) {
            // Increment failed login count
            userService.increaseFailedAttempts(username);
            return ResponseEntity.status(401).body("‚ùå Invalid username or password");
        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.internalServerError()
                    .body("‚ö†Ô∏è Login failed: " + e.getMessage());
        }
    }

    // ‚úÖ LOGOUT
    @PostMapping("/logout")
    public ResponseEntity<?> logout(@RequestParam String username) {
        try {
            userService.updateLogoutTime(username);
            return ResponseEntity.ok("üëã User logged out successfully: " + username);
        } catch (Exception e) {
            return ResponseEntity.internalServerError()
                    .body("‚ö†Ô∏è Logout failed: " + e.getMessage());
        }
    }

    // ‚úÖ UNLOCK ACCOUNT
    @PutMapping("/unlock/{username}")
    public ResponseEntity<?> unlockUser(@PathVariable String username) {
        try {
            userService.unlockAccount(username);
            return ResponseEntity.ok("üîì Account unlocked for user: " + username);
        } catch (Exception e) {
            return ResponseEntity.internalServerError()
                    .body("‚ö†Ô∏è Unlock failed: " + e.getMessage());
        }
    }
}
